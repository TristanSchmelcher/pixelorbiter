<?xml version="1.0"?>
<compiz>
	<plugin name="pixelorbiter" useBcop="true">
		<_short>Pixel Orbiter</_short>
		<_long>Pixel Orbiter</_long>
		<category>Desktop</category>
		<deps>
			<relation type="after">
				<plugin>composite</plugin>
				<plugin>cube</plugin>
				<plugin>decor</plugin>
				<plugin>expo</plugin>
				<plugin>ezoom</plugin>
				<plugin>opengl</plugin>
				<plugin>mousepoll</plugin>
				<plugin>rotate</plugin>
				<plugin>transformdamage</plugin>
				<plugin>unityshell</plugin>
				<plugin>vpswitch</plugin>
				<plugin>wall</plugin>
			</relation>
			<requirement>
				<plugin>composite</plugin>
				<plugin>opengl</plugin>
				<plugin>mousepoll</plugin>
				<plugin>transformdamage</plugin>
			</requirement>
		</deps>
		<options>
			<group>
				<_short>General</_short>
				<option name="interval" type="int">
					<_short>Pixel shift interval</_short>
					<_long>The interval (in ms) between one pixel shift and the next.</_long>
					<default>60000</default>
					<min>10</min>
					<max>600000</max>
				</option>
				<option name="max_offset" type="int">
					<_short>Maximum pixel shift</_short>
					<_long>The maximum number of pixels by which the screen will be shifted from its normal position.</_long>
					<default>10</default>
					<min>1</min>
					<max>9999</max>
				</option>
				<option name="mouse_behaviour" type="int">
					<_short>Mouse Out of Bounds Behaviour</_short>
					<_long>The behaviour of the orbiter when the mouse is moved outside the bounds of the visible screen area.</_long>
					<default>0</default>
					<min>0</min>
					<max>2</max>
					<desc>
						<value>0</value>
						<_name>Bounce</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Pan</_name>
					</desc>
					<desc>
						<value>2</value>
						<_name>None</_name>
					</desc>
				</option>
				<option name="mouse_margin" type="int">
					<_short>Mouse Out of Bounds Margin Size</_short>
					<_long>The size (in pixels) of the margins at the edges of the screen within which the mouse out of bounds behaviour will take effect.</_long>
					<default>10</default>
					<min>-9999</min>
					<max>9999</max>
				</option>
			</group>
		</options>
	</plugin>
</compiz>
